{
  "name": "tashneet-personality-site",
  "version": "1.0.0",
  "description": "Personality-first single-page site for Tashneet built with React, TypeScript, Vite, Tailwind CSS, Framer Motion, and react-three-fiber.",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build",
    "preview": "vite preview",
